{
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ]
}
